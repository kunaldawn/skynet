# Skynet AI Agent Environment Configuration
# Copy this file to .env and customize the values

# ============================================================================
# Server Configuration
# ============================================================================
PORT=8080

# ============================================================================
# Ollama Configuration
# ============================================================================
# For host Ollama: http://host.docker.internal:11434
# For containerized Ollama: http://ollama:11434
OLLAMA_ENDPOINT=http://host.docker.internal:11434
OLLAMA_MODEL=qwen3
OLLAMA_PORT=11434

# Ollama Performance Settings (if running Ollama in container)
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_LOADED_MODELS=1
OLLAMA_MAX_QUEUE=512
OLLAMA_MODELS_PATH=./ollama-models

# ============================================================================
# Agent Configuration
# ============================================================================
# Maximum number of iterations the agent can perform per request
MAX_ITERATIONS=100

# Request timeout in seconds (5 minutes default)
REQUEST_TIMEOUT=300

# Maximum number of previous messages to include in conversation context
CONTEXT_LIMIT=10

# ============================================================================
# Memory Store Configuration
# ============================================================================
# Maximum age of chat sessions in hours before they expire
SESSION_MAX_AGE_HOURS=24

# How often to clean up expired sessions (in minutes)
CLEANUP_INTERVAL_MINUTES=60

# Maximum number of sessions per user (future use)
MAX_SESSIONS_PER_USER=50

# ============================================================================
# Logging Configuration
# ============================================================================
# Logging level: debug, info, warn, error
LOG_LEVEL=info
